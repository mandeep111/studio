rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check ownership or admin role
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    function isSignedIn() {
      return request.auth != null;
    }

    // Users can be read by anyone, but only the user themselves or an admin can write.
    // New users can create their own profile.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Problems can be read by anyone.
    // Creation is allowed for any signed-in user.
    // Updates and deletes are restricted to the owner or an admin.
    match /problems/{problemId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.creator.userId) || isAdmin();
    }

    // Solutions have the same rules as Problems.
    match /solutions/{solutionId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.creator.userId) || isAdmin();
    }
    
    // Ideas have the same rules as Problems.
    match /ideas/{ideaId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.creator.userId) || isAdmin();
    }

    // Notifications can only be read by the recipient or an admin (for admin-wide notifications).
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId) || (resource.data.userId == 'admins' && isAdmin());
      allow create: if isSignedIn(); // System can create notifications
      allow update: if isOwner(resource.data.userId); // User can mark as read
    }

    // Deals can be created by Investors.
    // Reading a deal is restricted to its participants (Investor, Problem Creator, Solution Creator) or an admin.
    match /deals/{dealId} {
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Investor';
      allow read: if isSignedIn() && (
                    resource.data.investor.userId == request.auth.uid ||
                    resource.data.problemCreator.userId == request.auth.uid ||
                    resource.data.solutionCreator.userId == request.auth.uid ||
                    isAdmin()
                  );

      // Messages within a deal can be created and read by the deal participants.
      match /messages/{messageId} {
        allow read, create: if isSignedIn() && (
                    get(/databases/$(database)/documents/deals/$(dealId)).data.investor.userId == request.auth.uid ||
                    get(/databases/$(database)/documents/deals/$(dealId)).data.problemCreator.userId == request.auth.uid ||
                    get(/databases/$(database)/documents/deals/$(dealId)).data.solutionCreator.userId == request.auth.uid ||
                    isAdmin()
                  );
      }
    }
  }
}
