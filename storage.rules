rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read on all files by default
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the 'attachments' folder.
    match /attachments/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
