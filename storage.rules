rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files so images can be displayed.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the attachments folder.
    match /attachments/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Only allow a user to write to their own avatar folder.
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
